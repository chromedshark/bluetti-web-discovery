{
  "name": "bluetti-web-discovery",
  "version": "0.1.0",
  "description": "Web Bluetooth discovery app for Bluetti devices",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun test",
    "serve": "bun ./index.html"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/web-bluetooth": "^0.0.21",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
