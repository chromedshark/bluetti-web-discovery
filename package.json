{
  "name": "bluetti-web-discovery",
  "version": "0.1.0",
  "description": "Web Bluetooth discovery app for Bluetti devices",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "test:features": "bunx bddgen && bunx playwright test",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun test",
    "serve": "bun ./src/index.html",
    "serve:test": "bun ./test-server.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/spark-md5": "^3.0.5",
    "@types/web-bluetooth": "^0.0.21",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fake-indexeddb": "^6.2.5",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "immer": "^11.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "spark-md5": "^3.0.2",
    "use-immer": "^0.11.0",
    "wouter": "^3.9.0"
  }
}
